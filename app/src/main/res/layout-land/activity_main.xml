<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pageNameTextView"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/appName"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayoutOcean11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewOcean11"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="@string/ocean_s_eleven_poster"
                app:srcCompat="@drawable/ocean11" />

            <TextView
                android:id="@+id/ocean11Title"
                style="@style/ImageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ocean11ru" />

            <Button
                android:id="@+id/detailsButtonOcean11"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detailsButton" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutOcean12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewOcean12"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="@string/ocean_s_twelve_poster"
                app:srcCompat="@drawable/ocean12" />

            <TextView
                android:id="@+id/ocean12Title"
                style="@style/ImageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ocean12ru" />

            <Button
                android:id="@+id/detailsButtonOcean12"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detailsButton" />

        </LinearLayout>

        <Button
            android:id="@+id/inviteFriendButton"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawablePadding="4dp"
            android:text="@string/inviteFriendButton" />
    </LinearLayout>

</LinearLayout>